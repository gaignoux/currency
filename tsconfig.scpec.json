{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "dist/out-tsc",
      "module": "commonjs",
      "types": ["jest", "node"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "jest.config.ts",
      "test/*.test.ts",
      "test/*.spec.ts",
      "src/*.ts",
      "src/**/*.d.ts"
    ]
}